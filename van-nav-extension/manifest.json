{
  "manifest_version": 3,
  "name": "Van Nav 书签助手",
  "version": "1.0.2",
  "description": "快速添加当前网页到 Van Nav 导航站",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "open-extension": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "快速打开 Van Nav 书签助手"
    }
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

